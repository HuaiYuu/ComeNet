<script>

    document.getElementById("loginForm").addEventListener("submit", function (event)
    {
        event.preventDefault();

        if (navigator.geolocation)
        {
            navigator.geolocation.getCurrentPosition(showPosition);
        } 
        else
        {
            alert('Geolocation is not supported by your browser.');
        }

    }
    )

    function getLocation() 
    {
        if (navigator.geolocation) {
            navigator.geolocation.getCurrentPosition(showPosition);
        } else {
            alert('Geolocation is not supported by your browser.');
        }
    }

    function showPosition(position) 
    {
       


        const latitude = position.coords.latitude.toString();
        const longitude = position.coords.longitude.toString();


        var username = document.getElementById("username").value;
        var password = document.getElementById("password").value;
        var myHeaders = new Headers();
        myHeaders.append("Content-Type", "application/json");

        var raw = JSON.stringify({
            "provider": "native",
            "email": username,
            "password": password,
            "access_token": "",
            "latitude": latitude,
            "longitude": longitude,
        });

        var requestOptions = {
            method: 'POST',
            headers: myHeaders,
            body: raw,
            redirect: 'follow'
        };
        //shttps://localhost:44364/api/user/signin
        //shttp://13.228.116.210/api/user/signin
        //      fetch("shttp://13.228.116.210/api/user/signin", requestOptions)
        fetch("https://localhost:7136/api/users/signin", requestOptions)
            .then(response => response.json())
            .then(result => {
                if (result.access_token != null) {
                    alert('登入成功');
                    //          window.location.href = 'shttp://13.228.116.210/store/index';
                    window.location.href = 'https://localhost:7136/home/index';
                    ///
                }
                else {
                    alert('登入失敗');
                    window.location.reload();
                }
            })
            .catch(error => console.log('error', error));

        

    }



   
</script>



